<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= accessing_user_path(@user) %>">
          <span id="accessing" class="stat">
            <%= @user.accessing.count %> accessing
          </span>
        </a>
      </td>
      <td>
        <a href="<%= accessors_user_path(@user) %>">
          <span id="accessors" class="stat">
            <%= pluralize(@user.accessors.count, "accessor") %>
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>
