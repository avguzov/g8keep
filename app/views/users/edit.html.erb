<h1>Edit user</h1>

<!-- displays form for editing the current user's contact
	 information -->
<table class="profile" summary="Profile information">
  <tr>
	<td class = "main" id="left_info">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', :object => f.object %>
		<div class="field">
			<%= f.label :first_name %><br />
			<%= f.text_field :first_name %>
		</div>
		<div class="field">
			<%= f.label :last_name %><br />
			<%= f.text_field :last_name %>
		</div>
		<div class="field">
			<%= f.label :username %><br />
			<%= f.text_field :username %>
		</div>
		<div class="field">
			<%= f.label :password %><br />
			<%= f.password_field :password %>
		</div>
		<div class="field">
			<%= f.label :password_confirmation, "Confirmation" %><br />
			<%= f.password_field :password_confirmation %>
		</div>
	</td>
	<td class="sidebar round" id="right_info">

		<div class="field">
			<%= f.label :personal_email %><br />
			<%= f.text_field :personal_email %>
		</div>
		<div class="field">
			<%= f.label :work_email %><br />
			<%= f.text_field :work_email %>
		</div>
		<div class="field">
			<%= f.label :home_phone %><br />
			<%= f.text_field :home_phone %>
		</div>
		<div class="field">
			<%= f.label :work_phone %><br />
			<%= f.text_field :work_phone %>
		</div>
		<div class="field">
			<%= f.label :cell_phone %><br />
			<%= f.text_field :cell_phone %>
		</div>
		<div class="actions">
			<%= f.submit "Update" %>
		</div>
		<% end %>
		<div>
			<%= gravatar_for @user %>
			<a href="http://gravatar.com/emails"><strong>change</strong></a>
		</div>
	</td>
  </tr>
</table>

