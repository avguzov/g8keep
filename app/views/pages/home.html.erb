<!-- displays search bar if user is signed in -->
<% if signed_in? %>
<table class="front" summary="For signed-in users">
	<tr>
	  <td class="main">	
		<% form_tag results_path, :method => 'get' do %>
			<p>
				<%= text_field_tag :search %>
				<%= submit_tag "Search Users", :name => nil %>
			</p>
		<% end %>
	  </td>
	  <td class="sidebar round">		
		<%= render 'shared/user_info' %>
      </td>
    </tr>
 </table>
<!-- otherwise redirects visitor to the sign up page -->
<% else %>
	<script>window.location = "/signup";</script>
<% end %>



