<!-- displays the sign in page for the website -->
<h1>Sign in</h1>
<!-- form for user to enter his or her sign-in information -->
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<!-- link to registration -->
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
